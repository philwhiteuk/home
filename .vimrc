"presentation
set number
set ruler
set colorcolumn=160

"standards
filetype indent on
set tabstop=2
set shiftwidth=2
set expandtab

"annoyances
set noerrorbells
set novisualbell

"custom key mappings
nmap ; :

"refresh buffer on file change
set autoread

"yank to clipboard
set clipboard=unnamed

"highlight tabs
"highlight SpecialKey ctermfg=1
"set list
"set listchars=tab:T>
